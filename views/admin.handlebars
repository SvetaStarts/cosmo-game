   


      <h2>Пользователи</h2>

      <!-- Кнопка создания пользователя ---> 
      <div class="users-button">
        <button 
          type="button" 
          class="btn btn-primary btn-lg"  
          onclick="location.href='/create-user'"
          >
          Создать пользователя
        </button>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">E-mail</th>
              <th scope="col">Имя</th>
              <th scope="col">Админ.</th>
                 <th scope="col">Блокирован</th>
              <th scope="col">Дата создания</th>
              <th scope="col" width="350px">&nbsp;</th>
            </tr>
           </thead>
           <tbody>

            {{#users}}
            <tr>
              <td>{{_id}}</td>
              <td>{{email}}</td>
              <td>{{name}}</td>
              <td>{{{admin}}}</td>
              <td>{{{blocked}}}</td>
              <td>{{create_date}}</td>
              <td>
                <button type="button" class="btn btn-dark" onclick="location.href='/blocked-user/{{_id}}'">Блокировать</button>&nbsp;
                <button type="button" class="btn btn-primary" onclick="location.href='/update-user@{{_id}}'">Изменить</button>&nbsp;
                <button type="button" class="btn btn-danger" onclick="location.href='/remove-user/{{_id}}'">Удалить</button>
              </td>
            </tr>
            {{/users}}

          </tbody>
        </table>
      </div>